<Window x:Class="MonocularPhotoViewer.Viewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Viewer" Height="700" Width="700">
    <Grid>
        <Canvas x:Name="LeftCanvas"  Focusable="True" HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Center"  Background="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
        <Image x:Name='imageRegion' Source="FirstImage.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
